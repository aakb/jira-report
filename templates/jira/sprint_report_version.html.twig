<div>
  <strong>Projekt: </strong><span>{{ project.name }}</span>
</div>
<div>
  <strong>Bestilling: </strong>
  <span>{{ version.name }}</span>
</div>
{% if version.description is defined %}
<div>
  <strong>Beskrivelse: </strong>
  <p>{{ version.description }}</p>
</div>
{% endif %}

<div>
  <strong>Salgsbudget: </strong><input type="number" id="input-budget">
</div>
<div>
  <div>
    <strong>Timer reg. total: </strong>
    <span>
      {{ spentHours }}
    </span>
  </div>

  <div>
    <strong>Resterende timer planlagt total: </strong>
    <span>
    {{ remainingHours }}
  </span>
  </div>
</div>
<div>
  <strong>Færdiggørelsesgrad (%): </strong><input type="number" id="input-finished-degree" max="100" min="0">
</div>

<div>
  <h3>Projektets faser:</h3>
  <table>
    <thead>
      <tr>
        <th>EPIC</th>
        <th>Est.</th>
        <th>Resterende arbejde est.</th>
        <th>Registreret</th>
      </tr>
    </thead>
    <tbody>
      {% for epic in epics %}
        <tr>
          <td>{{ epic.name }}</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
